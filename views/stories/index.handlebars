<h1>Stories</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                <a class="btn-floating halfway-fab waves-effect waves-light red" href="/stories/edit/{{id}}"><i
                        class="fas fa-pencil-alt"></i></a>
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{ stripTags (truncate body 120)}}</p>
                <br>
                <div class="chip">
                    <img src={{stories.user.image}}>
                    {{user.firstName}} {{user.lastName}}
                </div>
            </div>
            <div class="card-action center-align"> 
                <a class="btn grey" href="/stories/show/{{id}}">Read</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories found</p>
</div>

{{/each}}